{# templates/admin/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; font-family: Arial, sans-serif; }
        body { display: flex; min-height: 100vh; background: #f4f6f9; }
        .sidebar { width: 240px; background: #1f2933; color: #fff; padding: 20px 0; position: fixed; top: 0; bottom: 0; left: 0; }
        .sidebar .logo { text-align: center; font-size: 22px; font-weight: bold; margin-bottom: 30px; }
        .sidebar ul { list-style: none; }
        .sidebar li { margin-bottom: 8px; }
        .sidebar a { display: block; padding: 10px 20px; color: #cbd5e1; text-decoration: none; font-size: 15px; }
        .sidebar a:hover, .sidebar a.active { background: #111827; color: #fff; }
        .sidebar .section-title { padding: 10px 20px; font-size: 12px; text-transform: uppercase; color: #9ca3af; margin-top: 15px; }
        .main { margin-left: 240px; flex: 1; display: flex; flex-direction: column; }
        .topbar { height: 60px; background: #ffffff; border-bottom: 1px solid #e5e7eb; display: flex; align-items: center; justify-content: space-between; padding: 0 20px; }
        .topbar .title { font-size: 20px; font-weight: 600; }
        .topbar .user-info { font-size: 14px; color: #6b7280; }
        .content { padding: 20px; }
        .cards { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 15px; margin-bottom: 20px; }
        .card { background: #ffffff; border-radius: 8px; padding: 15px; box-shadow: 0 1px 3px rgba(15,23,42,0.08); }
        .card h3 { font-size: 16px; margin-bottom: 8px; }
        .card p { font-size: 13px; color: #6b7280; }
        .table-wrapper { background: #ffffff; border-radius: 8px; box-shadow: 0 1px 3px rgba(15,23,42,0.08); padding: 15px; margin-top: 10px; }
        .table-wrapper h2 { font-size: 18px; margin-bottom: 10px; }
        table { width: 100%; border-collapse: collapse; font-size: 14px; }
        table thead { background: #f9fafb; }
        table th, table td { padding: 8px 10px; border-bottom: 1px solid #e5e7eb; text-align: left; }
        .badge { display: inline-block; padding: 2px 8px; border-radius: 999px; font-size: 11px; background: #e5f3ff; color: #1d4ed8; }
        .btn-link { color: #2563eb; text-decoration: none; font-size: 13px; margin-right: 8px; }
        .btn-link:hover { text-decoration: underline; }
        @media (max-width: 768px) { .sidebar { position: relative; width: 200px; } .main { margin-left: 200px; } }
        @media (max-width: 600px) { body { flex-direction: column; } .sidebar { position: relative; width: 100%; height: auto; } .main { margin-left: 0; } }
    </style>
{% endblock %}

{% block body %}
<div class="sidebar">
    <div class="logo">Animalove</div>
    <div class="section-title">Utilisateurs</div>
    <ul>
        <li><a href="">Admin</a></li>
        <li><a href={{path('app_users')}} class="active">Liste des utilisateurs</a></li>
    </ul>

    <div class="section-title">Contenu</div>
    <ul>
        <li><a href={{path('app_article')}}>Liste des articles</a></li>
        <li><a href={{path('app_categorie')}}>Liste des catégories</a></li>
        <li><a href={{path('app_login')}}>Deconnection</a></li>

    </ul>
</div>

<div class="main">
    <header class="topbar">
        <div class="title">Dashboard</div>
        <div class="user-info">Connecté en tant qu'admin</div>
    </header>

    <main class="content">
        <div class="cards">
            <div class="card">
                <h3>Utilisateurs</h3>
                <p>Total: 120</p>
                <p><a class="btn-link" href="/admin/user/add">Ajouter un utilisateur</a></p>
            </div>
            <div class="card">
                <h3>Articles</h3>
                <p>Total: 58</p>
                <p><a class="btn-link" href="/admin/article">Voir la liste</a></p>
            </div>
            <div class="card">
                <h3>Catégories</h3>
                <p>Total: 12</p>
                <p><a class="btn-link" href="/admin/category">Voir la liste</a></p>
            </div>
        </div>

        <div class="table-wrapper">
            <h2>Derniers articles</h2>
            <table>
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Catégorie</th>
                        <th>Auteur</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Article 1</td>
                        <td><span class="badge">News</span></td>
                        <td>Admin</td>
                        <td>
                            <a href="#" class="btn-link">Voir</a>
                            <a href="#" class="btn-link">Modifier</a>
                            <a href="#" class="btn-link">Supprimer</a>
                        </td>
                    </tr>
                    <tr>
                        <td>Article 2</td>
                        <td><span class="badge">Blog</span></td>
                        <td>Admin</td>
                        <td>
                            <a href="#" class="btn-link">Voir</a>
                            <a href="#" class="btn-link">Modifier</a>
                            <a href="#" class="btn-link">Supprimer</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>
</div>
{% endblock %}
