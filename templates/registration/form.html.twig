{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background: #f4f6f9;
        font-family: Arial, sans-serif;
    }

    /* Card contenant le formulaire */
    .form-card {
        background: #fff;
        max-width: 700px;
        margin: 50px auto;
        padding: 40px 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    /* Titre du formulaire */
    .form-card h2 {
        font-size: 28px;
        font-weight: 700;
        color: #1f2937;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Boutons styl√©s */
    .btn-submit {
        background-color: #3b82f6;
        color: #fff;
        padding: 12px 25px;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s;
        margin-right: 10px;
    }

    .btn-submit:hover {
        background-color: #2563eb;
    }

    .btn-cancel {
        background-color: #9ca3af;
        color: #fff;
        padding: 12px 25px;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s;
    }

    .btn-cancel:hover {
        background-color: #6b7280;
    }

    /* Responsive mobile */
    @media (max-width: 600px) {
        .form-card {
            padding: 25px 20px;
            margin: 20px;
        }

        .btn-submit, .btn-cancel {
            width: 100%;
            margin-bottom: 10px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="form-card">
    <h2>Ajouter un User</h2>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div style="text-align: center; margin-top: 25px;">
        <button type="submit" class="btn-submit">Valider</button>
        <a href="{{ path('app_login') }}" class="btn-cancel">Annuler</a>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
