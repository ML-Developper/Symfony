{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; font-family: Arial, sans-serif; }
        body { display: flex; min-height: 100vh; background: #f4f6f9; }

        .sidebar { width: 240px; background: #1f2933; color: #fff; padding: 20px 0; position: fixed; top: 0; bottom: 0; left: 0; }
        .sidebar .logo { text-align: center; font-size: 22px; font-weight: bold; margin-bottom: 30px; }
        .sidebar ul { list-style: none; }
        .sidebar li { margin-bottom: 8px; }
        .sidebar a { display: block; padding: 10px 20px; color: #cbd5e1; text-decoration: none; font-size: 15px; }
        .sidebar a:hover, .sidebar a.active { background: #111827; color: #fff; }
        .sidebar .section-title { padding: 10px 20px; font-size: 12px; text-transform: uppercase; color: #9ca3af; margin-top: 15px; }

        .main { margin-left: 240px; flex: 1; display: flex; flex-direction: column; }
        .content { padding: 20px; }

        /* ===== Correction tableau ===== */

        .table-wrapper {
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 1px 3px rgba(15,23,42,0.08);
            padding: 15px;
            margin-top: 20px;
        }

        .table-scroll {
            overflow-x: auto;
            max-width: 100%;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            white-space: nowrap;
            font-size: 14px;
        }

        table th, table td {
            padding: 10px 14px;
            border-bottom: 1px solid #e5e7eb;
            text-align: left;
        }

        table thead {
            background: #f9fafb;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar { position: relative; width: 200px; }
            .main { margin-left: 200px; }
        }

        @media (max-width: 600px) {
            body { flex-direction: column; }
            .sidebar { position: relative; width: 100%; height: auto; }
            .main { margin-left: 0; }
        }
    </style>
{% endblock %}

{% block body %}

<div class="sidebar">
    <div class="logo">Animalove</div>
    <div class="section-title">Utilisateurs</div>
    <ul>
        <li><a href="#">Admin</a></li>
        <li><a href="{{ path('app_users') }}" class="active">Liste des utilisateurs</a></li>
    </ul>

    <div class="section-title">Contenu</div>
    <ul>
        <li><a href="{{ path('app_article') }}">Liste des articles</a></li>
        <li><a href="{{ path('app_categorie') }}">Liste des catégories</a></li>
        <li><a href={{path('app_login')}}>Deconnection</a></li>
    </ul>
</div>

<div class="main">
    <div class="content">
        <h2>Liste des utilisateurs</h2>

        <div class="table-wrapper">
            <div class="table-scroll">
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in listeUsers %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="2">Aucun utilisateur trouvé</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

{% endblock %}
